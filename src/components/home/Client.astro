    <section class="clients-quote-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">

                    <div class="map-holder">
                        <div id="map"></div>
                    </div>
                    
                </div>

                <div class="col-md-6">
                    <div class="quote-box">
