---

const posts = await Astro.glob('../../pages/component/contact.md');

---

<div class="bg-[#f9f9f9] header-top">
    <div class="container  h-[50px] flex justify-between items-center">
        <div class="flex items-center">
            <div class="flex">
                <i class="fi fi-rr-envelope-plus text-gray mr-2"></i>
                {posts.map(post => (
                        <a class="text-gray" href={ post.frontmatter.mail }>{ post.frontmatter.mail }</a>
                ))}
            </div>
            <div class="w-[1px] h-8 bg-[#d9d9d9] mx-5"></div>
            <div class="flex">
                <i class="fi-rr-map-marker-home text-gray mr-2"></i>
                {posts.map(post => (
                        <p class="text-gray"> { post.frontmatter.address } </p>                                  
                ))}
            </div>
        </div>
        <div class="flex items-center">
            <i class="fi fi-rr-time-add text-gray mr-2"></i>
            {posts.map(post => (
                    <p class="text-gray"> { post.frontmatter.workingTime } </p>                                  
            ))}
            <div class="w-[1px] h-8 bg-[#d9d9d9] mx-5"></div>
            <a class="text-gray hover:text-primary" href="#"><i class="fi fi-rr-folder w-4 h-4"></i></a>
        </div>
    </div>
</div>
