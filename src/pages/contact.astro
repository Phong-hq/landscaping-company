---
import Layout from '../layouts/Layout.astro';
// import Slider from '../components/home/Slider.astro'
// import Service from '../components/home/Service.astro'
// import Project from '../components/home/Project.astro'
// import Client from '../components/home/Client.astro'
const response = await fetch('https://estate-strapi.srv01.dtsmart.dev/api/contact?populate=*');
const obj = await response.json();
const data = await obj.data.attributes;
const baseUrl = "https://estate-strapi.srv01.dtsmart.dev"



---

<Layout title="Advance Design Architects">
	<main class="">
		<!-- <Slider props={data.top_slider} />
		<Project /> -->
        <div class="bg-white contact-page">
            <div class="flex-center title" style={"--contact-thumnail: url('" + baseUrl + data.thumnail.data.attributes.url + "');"}>
                <p class="text-[68px] text-white font-extrabold">
                    LETâ€™S WORK TOGETHER
                </p>
            </div>
            <div class="container">
                <div class=" flex justify-between py-[110px] content">
                    <div class="w-[48%] content-item">
                        <p class="text-[30px] text-primary-hover font-extrabold widget mb-10">Contact us</p>
                        <input class="w-full h-[64px] text-18px px-4 mb-5" placeholder="Name" type="text">
                        <div class="flex justify-between">
                            <input class="w-[48%] h-[64px] text-18px px-4 mb-5" placeholder="Adress" type="text">
                            <input class="w-[48%] h-[64px] text-18px px-4 mb-5" placeholder="Phone" type="text">
                        </div>
                        <textarea class="w-full text-18px px-4 py-6 mb-5" placeholder="Message" rows="5"></textarea>
                        <button class="w-[200px] h-[50px] bg-primary-hover flex-center text-white font-semibold">Send</button>
                    </div>
    
                    <div class="w-[48%] content-item">
                        <p class="text-[30px] text-primary-hover font-extrabold widget mb-10">Contact details</p>
                        <div class="text-18px font-light mb-10 font-semibold lowercase" set:html={ data.description }></div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px font-bold">Address</p>
                            <p class="text-18px lowercase">{ data.adress }</p>
                        </div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px font-bold">Hotline</p>
                            <a class="text-18px hover:underline" href={'tel:' + data.phone}>{ data.phone }</a>
                        </div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px font-bold">Mail</p>
                            <a href={"mailto:" + data.email} class="text-18px lowercase hover:underline">{ data.email }</a>
                        </div>
    
                    </div>
    
                </div>
            </div>
            <div class="w-full map" set:html={data.map}></div>
        </div>

	</main>
</Layout>


<script>
</script>
<style lang="scss">
    .contact-page{
        .title{
             width: 100%;
             height: 550px;
             background-image: var(--contact-thumnail);
             background-size: cover;
             position: relative;
             p{
                 z-index: 10;
             }
             &::before{
                 position: absolute;
                 content: '';
                 background: #000;
                 width: 100%;
                 height: 100%;
                 left: 0px;
                 top: 0px;
                 opacity: 0.7;
                 z-index: 1;
             }
         }
         .content{
            .widget{
                padding-bottom: 10px;
                position: relative;
                &::before{
                    content: '';
                    position: absolute;
                    width: 35px;
                    height: 2px;
                    left: 0px;
                    bottom: 0px;
                    background: var(--primary-hover);
                }
            }
            input, textarea{
                border: 2px solid #eeeeee;
                border-radius: 4px;
                transition: .3s;
                &:focus{
                    outline: none;
                    border-color: #40a9ff;
                    box-shadow: 0 0 0 2px #1890ff33;
                }
            }
            .info-item{
                border-bottom: 1px solid #eeeeee;
            }
            
         }
         .map :is{
            background-color: #eeeeee;
            iframe{
                width: 100% !important;
            }
         }
         iframe{
            width: 100% !important;
        }
         @media (max-width: 767px) {
            .content{
                flex-direction: column;
                .content-item{
                    width: 100% !important;
                    margin-bottom: 50px;
                }
            }
         }
         
    }

</style>
