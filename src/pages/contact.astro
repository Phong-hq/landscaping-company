---
import Layout from '../layouts/Layout.astro';
// import Slider from '../components/home/Slider.astro'
// import Service from '../components/home/Service.astro'
// import Project from '../components/home/Project.astro'
// import Client from '../components/home/Client.astro'
const response = await fetch('https://estate-strapi.srv01.dtsmart.dev/api/contact?populate=*');
const obj = await response.json();
const data = await obj.data.attributes;
const baseUrl = "https://estate-strapi.srv01.dtsmart.dev"



---

<Layout title="Dtsmart">
	<main class="">
		<!-- <Slider props={data.top_slider} />
		<Project /> -->
        <div class="bg-white contact-page">
            <div class="flex-center title">
                <p class="text-[68px] text-white font-extrabold">
                    Liên hệ với chúng tôi
                </p>
            </div>
            <div class="container">
                <div class=" flex justify-between py-[110px] content">
                    <div class="w-[48%] content-item">
                        <p class="text-[30px] text-primary-hover font-extrabold widget mb-10">Gửi tin nhắn cho chúng tôi</p>
                        <input class="w-full h-[64px] text-18px px-4 mb-5" placeholder="Tên" type="text">
                        <div class="flex justify-between">
                            <input class="w-[48%] h-[64px] text-18px px-4 mb-5" placeholder="Địa chỉ" type="text">
                            <input class="w-[48%] h-[64px] text-18px px-4 mb-5" placeholder="Điện thoại" type="text">
                        </div>
                        <textarea class="w-full text-18px px-4 py-6 mb-5" placeholder="Nội dung yều cầu" rows="5"></textarea>
                        <button class="w-[200px] h-[50px] bg-primary-hover flex-center text-white font-semibold">GỬI ĐI</button>
                    </div>
    
                    <div class="w-[48%] content-item">
                        <p class="text-[30px] text-primary-hover font-extrabold widget mb-10">Hỗ trợ</p>
                        <div class="text-18px font-light mb-10" set:html={ data.description }></div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px">Địa chỉ</p>
                            <p class="text-18px font-semibold">{ data.adress }</p>
                        </div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px">Hotline</p>
                            <p class="text-18px font-semibold">{ data.phone }</p>
                        </div>
                        <div class="pb-8 mb-8 info-item">
                            <p class="text-18px">Mail</p>
                            <p class="text-18px font-semibold">{ data.email }</p>
                        </div>
    
                    </div>
    
                </div>
            </div>

            <div class="w-full map" set:html={data.map}></div>
        </div>

	</main>
</Layout>


<script>
</script>
<style lang="scss">
    .contact-page{
        .title{
             width: 100%;
             height: 550px;
             background-image: url('/images/banner-1.jpg');
             background-size: cover;
             position: relative;
             p{
                 z-index: 10;
             }
             &::before{
                 position: absolute;
                 content: '';
                 background: #000;
                 width: 100%;
                 height: 100%;
                 left: 0px;
                 top: 0px;
                 opacity: 0.7;
                 z-index: 1;
             }
         }
         .content{
            .widget{
                padding-bottom: 10px;
                position: relative;
                &::before{
                    content: '';
                    position: absolute;
                    width: 35px;
                    height: 2px;
                    left: 0px;
                    bottom: 0px;
                    background: var(--primary-hover);
                }
            }
            input, textarea{
                border: 2px solid #eeeeee;
                border-radius: 4px;
                &:focus{
                    outline: none;
                }
            }
            .info-item{
                border-bottom: 1px solid #eeeeee;
            }
            
         }
         .map{
            background-color: #eeeeee;
            iframe{
                width: 100% !important;
            }
         }
         iframe{
            width: 100% !important;
        }
         @media (max-width: 767px) {
            .content{
                flex-direction: column;
                .content-item{
                    width: 100% !important;
                    margin-bottom: 50px;
                }
            }
         }
         
    }

</style>
